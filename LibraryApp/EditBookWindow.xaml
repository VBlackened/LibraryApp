<Window x:Class="LibraryApp.EditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LibraryApp"
        Title="EditBookWindow" Height="160" Width="300"
        FontFamily="Verdana"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Title" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="TitleBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Author:" Grid.Row="1" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="AuthorBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Year of Release" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="YearBox" Grid.Row="2" Grid.Column="1" Margin="5" Width="80" HorizontalAlignment="Left"/>

        <Button x:Name="SaveBtn" Content="Save" Grid.Row="3" Grid.Column="1" Height="25" Width="80" Margin="10" Click="SaveBtn_Click"/>
    </Grid>
</Window>
