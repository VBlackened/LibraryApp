<Window x:Class="LibraryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LibraryApp"
        Title="LibraryApp" Height="450" Width="710"
        FontFamily="Verdana"
        WindowStartupLocation="CenterScreen"
        Background="LightBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        
        <DataGrid x:Name="BooksDataGrid" Grid.Column="1" IsReadOnly="True" AutoGenerateColumns="False" FontWeight="Bold">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Width="30" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Title" Width="150" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Author" Width="150" Binding="{Binding Author}"/>
                <DataGridTextColumn Header="Year of release" Width="150" Binding="{Binding YearOfRelease}"/>

                <DataGridTemplateColumn Header="Actions" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Edit"
                            Margin="2"
                            Click="EditBtn_Click"
                            Tag="{Binding}" />
                                <Button Content="Delete"
                            Margin="2"
                            Click="DeleteBtn_Click"
                            Tag="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <Button Content="Add" Height="30" Width="80" Margin="5,25,5,5" Grid.Column="0" FontSize="16" 
                FontWeight="Bold" VerticalAlignment="Top" Click="AddBtn_Click"/>

        <!--
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Button Content="Add" Height="30" Width="100" Margin="5" Click="AddBtn_Click"/>
            <Button Content="Edit" Height="30" Width="100" Margin="5" Click="EditBtn_Click"/>
            <Button Content="Delete" Height="30" Width="100" Margin="5" Click="DeleteBtn_Click"/>
        </StackPanel>
        -->
        
    </Grid>
</Window>
